{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "paths": {
      "@auth": [
        "auth"
      ],
      "@common": [
        "common"
      ],
      "@config": [
        "config"
      ],
      "@resolvers": [
        "resolvers"
      ],
      "@environments": [
        "environments"
      ],
      "@models": [
        "models"
      ],
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "coverage",
    "document",
    "dist",
    "backup",
    "**/*.spec.ts"
  ]
}